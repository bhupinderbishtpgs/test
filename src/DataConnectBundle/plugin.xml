<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>

        <!-- the plugin name [A-Za-z_] -->
        <pluginName>DataConnect</pluginName>

        <!-- a short description -->
        <pluginDescription><![CDATA[]]></pluginDescription>

        <!-- meta data -->
        <pluginVersion>1.0</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>0</pluginBuildTimestamp>

        <!-- put in the URL for the plugin configuration eg. /plugin/DataConnect/admin/index -->
        <pluginIframeSrc></pluginIframeSrc>

        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>\DataConnect\Plugin</pluginClassName>

        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/DataConnect/lib</path>
        </pluginIncludePaths>

        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>DataConnect</namespace>
        </pluginNamespaces>

        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/plugins/DataConnect/static/js/startup.js</path>
            <path>/plugins/DataConnect/static/js/toolbar.js</path>
            <path>/plugins/DataConnect/static/js/dataconnector.js</path>
            <path>/plugins/DataConnect/static/js/connector/db/panel.js</path>
            <path>/plugins/DataConnect/static/js/connector/db/item.js</path>
            <path>/plugins/DataConnect/static/js/mapping/mapping.js</path>
            <path>/plugins/DataConnect/static/js/mapping/mappinglist.js</path>
            <path>/plugins/DataConnect/static/js/definitions/mysql.js</path>
            <path>/plugins/DataConnect/static/js/definitions/sql.js</path>
        </pluginJsPaths>

        <!-- css files with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/plugins/DataConnect/static/css/connect.css</path>
        </pluginCssPaths>
        <!-- log filename -->
        <logfilename>dataconnect-log</logfilename>
        <!-- import limit -->
        <importlimit>1000</importlimit>
        <!-- generate Logs false-No true-Yes-->
        <generatelog>true</generatelog>
        <!-- multiselect value separator-->
        <separator>##</separator>
        <!-- execution lock enable/disable-->
        <execlock>enable</execlock>
        <!-- timeout (minutes)-->
        <timeout>1</timeout>  
        <!-- Class name for the import class --> 
        <importClassName>Product</importClassName>
        <importClassCategoryName>ProductCategory</importClassCategoryName>    
        
        <mappingCsvFolderPath>/src/DataConnectBundle/Resources/converted-csv</mappingCsvFolderPath>                 
			
    </plugin>
</zend-config>
